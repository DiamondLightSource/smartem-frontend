{
  "name": "smartem-frontend",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm run dev -w @smartem/legacy",
    "dev:mock": "npm run dev:mock -w @smartem/legacy",
    "dev:smartem": "npm run dev -w @smartem/app",
    "dev:smartem:mock": "npm run dev:mock -w @smartem/app",
    "build": "npm run build -w @smartem/legacy",
    "build:smartem": "npm run build -w @smartem/app",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "api:fetch": "npm run api:fetch -w @smartem/api",
    "api:fetch:local": "npm run api:fetch:local -w @smartem/api",
    "api:generate": "npm run api:generate -w @smartem/api",
    "api:update": "npm run api:update -w @smartem/api",
    "prepare": "lefthook install",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "npm run format:biome && npm run format:prettier",
    "format:biome": "biome format --write .",
    "format:prettier": "prettier --write \"**/*.{yml,yaml,md}\"",
    "format:check": "biome format . && prettier --check \"**/*.{yml,yaml,md}\"",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "lefthook": "^2.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@asyncapi/specs": "6.10.0",
    "tar": "^7.5.2",
    "validator": "^13.15.22",
    "js-yaml": "^4.1.1"
  }
}
